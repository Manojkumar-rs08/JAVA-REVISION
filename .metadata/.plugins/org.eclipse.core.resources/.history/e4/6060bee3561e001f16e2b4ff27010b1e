package string;

public class Stringparanthesis {

	public static void main(String[] args) {
		
		
		int count=0;
		
		
	String s1=")()())";
	
	String[] s2 = s1.split("");
	
	
	
			
	
	  for(int i=0;i<s2.length-1;i++) {
	  
	  if(s2[i].equals("("))
			  {
	  
	 count++;
	 
	  }
	  
	  if(s2[i+1].equals(")")) {
		  
		  count++;
	  }
	  
	  }
	 
	
	System.out.println(count);		
	}			
		
}